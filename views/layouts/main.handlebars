<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!--link to my stylesheet-->
    <link rel="stylesheet" href="./css/style.css" />
    <title>techBlog</title>
  </head>
  <body>
    <header class="bg-dark text-light flex-container">
      <ul class="nav nav-pills">
        <div class="row">
          <li class="col-sm"><button
              class="nav-item btn btn-default navbar-btn btn-outline-light"
            ><a href="/" class="noLines">Home</a></button></li>
          {{#if logged_in}}
            <li class="col-sm"><button
                class="nav-item btn btn-default navbar-btn btn-outline-light"
              ><a href="/profile" class="noLines">Profile</a></button></li>
            <li class="col-sm"><button
                class="nav-item btn btn-default navbar-btn btn-outline-light"
                id="logout"
              >Logout</button></li>
          {{else}}
            <li class="col-sm"><button
                class="nav-item btn btn-default navbar-btn btn-outline-light"
              ><a href="/login" class="noLines">Login</a></button></li>
          {{/if}}
          {{! <h1 class="col">techBlog</h1> }}
        </div>
      </ul>
      <h1 class="d-flex justify-content-center pb-4">techBlog</h1>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer class="bg-secondary text-white text-center fixed-bottom">
      <h6 class="">
        &copy;Copyright 2022 by Mario Armstrong. All Rights Reserved.</h6>
    </footer>
    {{#if logged_in}}
      <script src="./js/logout.js"></script>
    {{/if}}
  </body>
</html>