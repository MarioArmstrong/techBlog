<div class="container containerSize pt-5">
  <div class="row formBG">
    <form class="signup-form">
      <h2>Signup</h2>
      <div class="form-group col-2">
        <label class="form-label" for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group col-2">
        <label class="form-label" for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group col-2">
        <label class="form-label" for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group col-12 pt-2">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

